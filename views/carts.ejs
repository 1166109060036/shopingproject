  <!-- ‚úÖ Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const checkboxes = document.querySelectorAll('.item-checkbox');
    const form = document.getElementById('checkoutForm');
    const ppqr = document.getElementById('ppqr');
    const bankSection = document.getElementById('bankSection');
    const promptpaySection = document.getElementById('promptpaySection');
    const promptpaySlip = document.getElementById('promptpaySlip');
    const bankSlip = document.getElementById('bankSlip');

    // üîÑ ‡∏™‡∏•‡∏±‡∏ö‡πÅ‡∏™‡∏î‡∏á‡∏£‡∏π‡∏õ‡πÅ‡∏ö‡∏ö‡∏ä‡∏≥‡∏£‡∏∞‡πÄ‡∏á‡∏¥‡∏ô
    document.querySelectorAll('input[name="paymentMethod"]').forEach(radio => {
      radio.addEventListener('change', (e) => {
        if (e.target.value === 'promptpay') {
          promptpaySection.style.display = 'block';
          bankSection.style.display = 'none';
          promptpaySlip.required = true;
          bankSlip.required = false;
        } else {
          promptpaySection.style.display = 'none';
          bankSection.style.display = 'block';
          promptpaySlip.required = false;
          bankSlip.required = true;
        }
      });
    });

    // üßæ ‡∏™‡∏£‡πâ‡∏≤‡∏á hidden input
    function createHiddenInput(name, value) {
      const input = document.createElement('input');
      input.type = 'hidden';
      input.name = name;
      input.value = value;
      input.classList.add('dynamic-hidden');
      return input;
    }

    // üóëÔ∏è ‡∏•‡∏ö‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡πÅ‡∏ö‡∏ö AJAX
    async function deleteCart(cartId) {
      if (!confirm('‡∏Ñ‡∏∏‡∏ì‡πÅ‡∏ô‡πà‡πÉ‡∏à‡∏´‡∏£‡∏∑‡∏≠‡∏ß‡πà‡∏≤‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏•‡∏ö‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡∏ô‡∏µ‡πâ?')) return;
      const res = await fetch(`/carts/delete/${cartId}`, { method: 'POST' });
      if (res.ok) location.reload();
      else alert('‡∏•‡∏ö‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à');
    }

    // üí∞ ‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì‡∏¢‡∏≠‡∏î‡∏£‡∏ß‡∏°‡πÅ‡∏•‡∏∞‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï QR
    function togglePaymentSectionAndTotal() {
      let total = 0, anyChecked = false;
      document.querySelectorAll('.dynamic-hidden').forEach(e => e.remove());

      checkboxes.forEach(cb => {
        if (cb.checked) {
          anyChecked = true;
          const price = parseFloat(cb.dataset.price);
          total += price;
          form.appendChild(createHiddenInput('cart_ids', cb.value));
          form.appendChild(createHiddenInput('quantities', cb.dataset.quantity));
          form.appendChild(createHiddenInput('product_ids', cb.dataset.productId));
          form.appendChild(createHiddenInput('prices', price));
        }
      });

      const section = document.getElementById('paymentSection');
      const totalText = document.getElementById('totalSelectedPrice');
      const amountText = document.getElementById('ppAmountText');
      const amountHidden = document.getElementById('amountSelected');

      section.style.display = anyChecked ? 'block' : 'none';
      totalText.textContent = total.toFixed(2);
      amountText.textContent = total.toFixed(2);
      amountHidden.value = total.toFixed(2);

      if (ppqr) {
        if (anyChecked) {
          const amt = encodeURIComponent(total.toFixed(2));
          ppqr.src = `/payment/pp-qr?amount=${amt}`;
          ppqr.alt = `PromptPay QR ${amt} ‡∏ö‡∏≤‡∏ó`;
        } else {
          ppqr.removeAttribute('src');
        }
      }
    }

    // üõ°Ô∏è ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡∏ä‡∏≥‡∏£‡∏∞‡πÄ‡∏á‡∏¥‡∏ô‡πÇ‡∏î‡∏¢‡πÑ‡∏°‡πà‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤
    form.addEventListener('submit', (e) => {
      const checked = [...checkboxes].some(cb => cb.checked);
      if (!checked) {
        e.preventDefault();
        alert('‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡∏Å‡πà‡∏≠‡∏ô‡∏ä‡∏≥‡∏£‡∏∞‡πÄ‡∏á‡∏¥‡∏ô');
      }
    });

    checkboxes.forEach(cb => cb.addEventListener('change', togglePaymentSectionAndTotal));
  </script>


